<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.diechichat">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_small_icon_only_inverted_apk"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DieChiChat">
        <activity android:name=".vista.ChatActivity"
            android:label="@string/hello_blank_fragmentContacto"
            android:parentActivityName=".vista.MainActivity"
            android:theme="@style/Theme.DieChiChat.NoActionBar"
            android:windowSoftInputMode="adjustPan|stateHidden"/>
        <activity
            android:name=".vista.DietaActivity"
            android:label="@string/title_activity_dieta"
            android:parentActivityName=".vista.MainActivity"
            android:theme="@style/Theme.DieChiChat.NoActionBar"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name=".vista.NuevoClienteActivity"
            android:label="@string/title_activity_nuevo_cliente"
            android:parentActivityName=".vista.MainActivity"
            android:theme="@style/Theme.DieChiChat.NoActionBar"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name=".vista.MiPerfilActivity"
            android:label="@string/title_activity_mi_perfil"
            android:parentActivityName=".vista.MainActivity"
            android:theme="@style/Theme.DieChiChat.NoActionBar"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name=".vista.MisClientesActivity"
            android:label="@string/title_activity_mis_clientes"
            android:parentActivityName=".vista.MainActivity"
            android:theme="@style/Theme.DieChiChat.NoActionBar"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name=".vista.MainActivity"
            android:usesCleartextTraffic="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.DieChiChat.NoActionBar"
            tools:targetApi="m">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>